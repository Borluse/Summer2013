using UnityEngine;
using UnityEditor;
using System.Collections;
using System.Collections.Generic;
using System.Text;

[CustomEditor(typeof(TimedDespawner))]
public class TimedDespawnerInspector : Editor {
	public override void OnInspectorGUI() {
        EditorGUIUtility.LookLikeControls();
		EditorGUI.indentLevel = 1;
		
		TimedDespawner settings = (TimedDespawner)target;
		
		DTInspectorUtility.DrawTexture(DTInspectorUtility.GetLevelSettings.logoTexture);
		
		EditorGUILayout.Separator();
		
		settings.StartTimerOnSpawn = EditorGUILayout.Toggle("Start Timer On Awake", settings.StartTimerOnSpawn);
		settings.LifeSeconds = EditorGUILayout.Slider("Despawn Timer (sec)", settings.LifeSeconds, .1f, 50f);
		
		if (GUI.changed) {
  			EditorUtility.SetDirty(target);	// or it won't save the data!!
		}
		
		//DrawDefaultInspector();
    }

}
